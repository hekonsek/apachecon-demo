<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>apachecon</groupId>
    <artifactId>apachecon-demo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <version.compiler.plugin>2.3.1</version.compiler.plugin>
        <version.shade.plugin>2.3</version.shade.plugin>
        <maven.compiler.target>1.7</maven.compiler.target>
        <maven.compiler.source>1.7</maven.compiler.source>

        <!-- the version of the BOM, defining all the dependency versions -->
        <fabric8.version>2.0.0-SNAPSHOT</fabric8.version>

        <!-- versions for use in mvn plugins as we cannot inherit them from a BOM -->
        <jimagezip.version>2.0.0-SNAPSHOT</jimagezip.version>

        <docker.maven.plugin.version>0.9.11</docker.maven.plugin.version>

        <!-- fabric8 configuration -->
        <docker.dataImage>${env.DOCKER_REGISTRY}/quickstart/${project.artifactId}:${project.version}</docker.dataImage>
        <fabric8.port.host.jolokia>9805</fabric8.port.host.jolokia>
        <fabric8.label.container>java</fabric8.label.container>
        <fabric8.label.group>quickstarts</fabric8.label.group>

        <!-- jimagezip properties -->
        <docker.baseImage>fabric8/java</docker.baseImage>
        <docker.env.MAIN>io.fabric8.quickstarts.java.simple.fatjar.Main</docker.env.MAIN>
        <spring-boot-version>1.1.8.RELEASE</spring-boot-version>

    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- BOMs -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${spring-boot-version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>apache.snapshots</id>
            <name>Apache Development Snapshot Repository</name>
            <url>https://repository.apache.org/content/repositories/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <modules>
        <module>apachecon-demo-router</module>
        <module>apachecon-demo-router-processor</module>
    </modules>

</project>
